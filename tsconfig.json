{
    "compilerOptions": {
        "module": "ES6",
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "target": "ES5",
        "declaration": true,
        "noImplicitAny": false,
        // "lib": ["ES2016", "DOM"],
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "target": "ES2016",
        "declaration": true,
        "noImplicitAny": false,
        "lib": ["ES2016", "DOM"],
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
